h2(style="color:white;padding-left:65px; padding-right:65px; margin-top:50px; margin-bottom:50px;  font-size:18px")  List of volunteer events 
  table.table.table-responsive.table-hover.table-striped.table-dark
    thead
      tr
        th(scope="col") ID
        th(scope="col") Event Name
        th(scope="col") Event DateTime
        th(scope="col") Venue
        th(scope="col") Contact 
        th(scope="col") Actions
        th
    tbody
    script.
      document.addEventListener('DOMContentLoaded', function() {
        axios.get('/api/volunteers')
          .then(function(response) {
            const volunteer = response.data;
            const tableBody = document.querySelector('table tbody');
            volunteer.forEach(t => {
              const row = document.createElement('tr');
              const volunteers = t.volunteers
              row.innerHTML = `
                <td>${t.id}</td>
                <td>${volunteers.event}</td>
                <td>${volunteers.eventDateTime}</td>
                <td>${volunteers.venue}</td>
                <td>${volunteers.contactPhone}</td>
                <td>
                  <button class="btn btn-primary btn-sm">Edit</button>
                  <button class="btn btn-danger btn-sm" data-id="${t.id}">Delete</button>
                </td>
              `;
              tableBody.appendChild(row);
            });
          })
          .catch(function(error) {
            console.log(error);
          });

          // Use event delegation for delete buttons
          document.addEventListener('click', function(event) {
            if (event.target && event.target.classList.contains('btn-danger')) {
              const volunteersId = event.target.getAttribute('data-id');
              axios.delete(`/api/volunteers/${volunteersId}`).then(function(response) {
                console.log('Delete successful', response);
                location.href = '/'
              })
              .catch(function(error) {
                console.log('Error deleting volunteers', error);
              });
            }
          });
      });


